@model Repozytorium.Models.FundTowarzystwo

@{
    ViewBag.Title = Model.FundTowarzystwoNazwa + "-usuń";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h2>Usuń towarzystwo</h2>
</div>

<div class="row">
    <div class="col-md-2">
        @{ Html.RenderAction("AdminMenu", "AdminNav");}
    </div>
    <div class="col-md-10">
        <div>
           
            <dl class="dl-horizontal">
                <h3>Are you sure you want to delete this?</h3>
                <dt>
                    @Html.DisplayNameFor(model => model.FundTowarzystwoNazwa)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FundTowarzystwoNazwa)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.FundTowarzystwoDataDodania)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FundTowarzystwoDataDodania)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" />
                    @Html.ActionLink("Powrót do listy", "Index", new { }, new { @class="btn btn-default"})
                </div>
            }
        </div>
    </div>
</div>
