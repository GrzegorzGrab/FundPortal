@model Repozytorium.Models.FundTyp

@{
    ViewBag.Title = "Create";
}

<div class="page-header">
    <h2>Dodaj nowy typ funduszu</h2>
</div>

<div class="row">
    <div class="col-md-2">
        @{Html.RenderAction("AdminMenu", "AdminNav");}
    </div>
    <div class="col-md-10">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.FundTypName, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.FundTypName , new { htmlattributes = new { @class = "form-control", placeholder = "Typ funduszu" } })
                        @Html.ValidationMessageFor(model => model.FundTypName)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.FundTypOpis, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.FundTypOpis, new { htmlattributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FundTypOpis)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                        <input type="reset" value="Anuluj" class="btn btn-default" />
                        @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn btn-default" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
