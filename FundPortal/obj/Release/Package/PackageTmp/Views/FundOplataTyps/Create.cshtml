@model Repozytorium.Models.FundOplataTyp

@{
    ViewBag.Title = "Dodaj opłatę";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h2>Dodaj nową opłatę</h2>
</div>
@if (TempData["NazwaOplatyIstnieje"] != null)
{
    <div class="alert alert-warning" role="alert">@TempData["NazwaOplatyIstnieje"]</div>
}

<div class="row">
    <div class="col-md-2">
        @{ Html.RenderAction("AdminMenu", "AdminNav");}
    </div>
    <div class="col-md-10">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.FundOplataTypNazwa, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.FundOplataTypNazwa, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FundOplataTypNazwa, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.FundOplataTypOpis, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.FundOplataTypOpis, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FundOplataTypOpis, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                        <input type="reset" value="Anuluj" class="btn btn-default" />
                        @Html.ActionLink("Powrót do listy", "Index", new { }, new { @class="btn btn-default"})
                    </div>
                </div>
            </div>
        }

    </div>
</div>